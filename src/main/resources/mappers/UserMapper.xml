<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.solvd.online_shop.mybatisimpl.mappers.UserMapper">

    <resultMap id="UserResultMap" type="com.solvd.online_shop.models.User">
        <id property="userId" column="user_id"/>
        <result property="name" column="name"/>
        <result property="email" column="email"/>
        <result property="password" column="password"/>
    </resultMap>

    <select id="getById" parameterType="int" resultMap="UserResultMap">
        SELECT * FROM Users WHERE user_id = #{id}
    </select>

    <select id="getUserByEmail" parameterType="string" resultMap="UserResultMap">
        SELECT * FROM Users WHERE email = #{email}
    </select>

    <select id="getAll" resultMap="UserResultMap">
        SELECT * FROM Users
    </select>

    <insert id="add" parameterType="com.solvd.online_shop.models.User">
        INSERT INTO Users (name, email, password) VALUES (#{name}, #{email}, #{password})
    </insert>

    <update id="update" parameterType="com.solvd.online_shop.models.User">
        UPDATE Users SET name=#{name}, email=#{email}, password=#{password} WHERE user_id=#{userId}
    </update>

    <delete id="delete" parameterType="int">
        DELETE FROM Users WHERE user_id=#{id}
    </delete>

</mapper>
